extends layout

block content
  canvas(id="canvas", width='800', height='600', style="top:0px; left:0px;background-color:#333388;")


  div(class="input")
    input(type="text", id="x")
    input(type="text", id="y")
    input(type="range", min="1", max="3", value="1", step="0.1", id="zoom")
    input(type="range", min="0", max="800", value="400", step="10", id="xshift")
    input(type="range", min="0", max="600", value="300", step="10", id="yshift")
    a(href="#", id="next") next

  div(class="buffer_img", style="display:none;")
    img(id="map")
